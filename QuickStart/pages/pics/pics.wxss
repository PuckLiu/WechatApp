/* pages/pics/pics.js.wxss */
.previewimg {  
    width:48%;  
    display: inline-block; 
    height: 200px;
    vertical-align: top;
    margin:1%; 
}
.previewimg image{  
    width:100%;  
    height:100%;
    ime-mode: WidthFlex;
}
.userName {  
    font-size: 20rpx;  
    color: #000000;  
}  
.avatar {  
    width: 30rpx;  
    height: 30rpx;  
} 
.img_item {
  width: 48%;
  margin: 1%;
  display: inline-block;
  vertical-align: top;
}
.circle-float{  
  color: #ffffff;  
  position: fixed;  
  display: flex;  
  align-items: center;  
  justify-content: center;  
  top: 20rpx;  
  right: 20rpx;  
  width: 60rpx;  
  height: 60rpx;  
  border-radius: 50%;  
  font-size: 28rpx;  
}
.circle-float image {
    width:100%;  
    height:100%;
    ime-mode: WidthFlex;
}
.circle-float-hide{  
 display: none;  
}  
